            <td>
                @Html.DisplayFor(modelItem => item.aName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.aSentiment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.aPosSentiment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.aNegSentiment)
            </td>
