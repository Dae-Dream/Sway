@model IEnumerable<Sway.Models.Assessment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.aName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.aSentiment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.aPosSentiment)
            </th>
